<link rel="stylesheet" href="/style.css">

<div class="app">
	<h1>我的個人日記 APP</h1>
	<div>
	  <% for(var i = 0; i < datas.length; i++) { %>
		<div class="page">
			<h2>
				<a href="/view?index=<%= i %>">
					<%= datas[i].title %>
				</a>
			</h2>
			<div class="text">
				<%= datas[i].content  %>
			</div>
			<h6><a href="/edit?index=<%= i %>">Edit</a></h6>
		</div>
	  <% } %>
	  <div class="page">
		<a href="/new"><h2>+</h2></a>
	  </div>
	</div>
</div>